<h2>Article</h2>

<!-- The articles_path helper tells Rails to point the form
to the URI Pattern associated with the articles prefix;
and the form will (by default) send a POST request to that route. -->

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
